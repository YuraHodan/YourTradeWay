.marcet ng-controller="marcetControler as stor"
  .row
    .medium-3.columns
      .selector.bage
        = render "selector"
      .dubl-select
        .accordion-button.opened
          p afdsfdsf
          .svg-slid = inline_svg "svg/ic_keyboard_arrow_down_black_24px.svg"
        .accordion-inner.show

          .selector
            ul.read-more-wrap ng-repeat="markets in questionmarkets"
              li
                .one-checkbox
                  .checkbox
                    input#checkbox-salis1 type="checkbox"
                    label.switcher-control for="checkbox-salis1"
                    span
                      a href="markets?id={{markets.id}}"
                        | {{markets.name}}
          .remove-all
            .x-component = inline_svg "photo/main/svg/filter_clear.svg"
            .ramove-text
                a href=logistics_path очистить все
            /// smole select
      .wrapper-filter
        .openfilters
          p фильтра
        .filter-container
          = render "selectsmole"
          .dubl-select
            .accordion-button.opened
              p afdsfdsf
              .svg-slid = inline_svg "svg/ic_keyboard_arrow_up_black_24px.svg"
            .accordion-inner.show

              .selector
                ul.read-more-wrap
                  li
                    .one-checkbox
                      .checkbox
                        input#checkbox-salis1 type="checkbox"
                        label.switcher-control for="checkbox-salis1"
                        span продажа
                        nav
                          ul.drop-down.closed
                            li
                              a.nav-button href="#"   = inline_svg "svg/ic_keyboard_arrow_down_black_24px.svg"
                            .down
                              ul
                                li
                                  .one-checkbox
                                    .checkbox
                                      input#checkbox-salis6 type="checkbox"
                                      label.switcher-control for="checkbox-salis6"
                                      span продажа
                                li
                                  .one-checkbox
                                    .checkbox
                                      input#checkbox-salis7 type="checkbox"
                                      label.switcher-control for="checkbox-salis7"
                                      span продажа
                                li
                                  .one-checkbox
                                    .checkbox
                                      input#checkbox-salis8 type="checkbox"
                                      label.switcher-control for="checkbox-salis8"
                                      span продажа
                  li
                    .one-checkbox
                      .checkbox
                        input#checkbox-salis2 type="checkbox"
                        label.switcher-control for="checkbox-salis2"
                        span продажа
                        nav
                          ul.drop-down.closed
                            li
                              a.nav-button href="#"   = inline_svg "svg/ic_keyboard_arrow_down_black_24px.svg"
                            li
                              .one-checkbox
                                .checkbox
                                  input#checkbox-salis9 type="checkbox"
                                  label.switcher-control for="checkbox-salis10"
                                  span продажа
                            li
                              .one-checkbox
                                .checkbox
                                  input#checkbox-salis11 type="checkbox"
                                  label.switcher-control for="checkbox-salis11"
                                  span продажа
                            li.
                              .one-checkbox
                                .checkbox
                                  input#checkbox-salis12 type="checkbox"
                                  label.switcher-control for="checkbox-salis12"
                                  span продажа

                  li
                    .one-checkbox
                      .checkbox
                        input#checkbox-salis3 type="checkbox"
                        label.switcher-control for="checkbox-salis3"
                          span продажа
                  li
                    .one-checkbox
                      .checkbox
                        input#checkbox-salis4 type="checkbox"
                        label.switcher-control for="checkbox-salis4"
                          span продажа
                  li
                    .one-checkbox
                      .checkbox
                        input#checkbox-salis5 type="checkbox"
                        label.switcher-control for="checkbox-salis5"
                          span продажа
              .remove-all
                .x-component = inline_svg "photo/main/svg/filter_clear.svg"
                / .ramove-text очистить все
        /// smole select
        .selector
          = render "advertisingSlider"
    .medium-9.columns
      .topgoods
        .topgoods-tex.color-line.gray-block
          .title топ товари

        #sliderBX-contenedor
          #btnSliderNext
            i.fa.fa-angle-right aria-hidden="true"
          #btnSliderPrev
            i.fa.fa-angle-left aria-hidden="true"
          #sliderBX
            .sliderBXcell  ng-repeat="markets_top in top_markets"
              / .medium-4.columns
              .border-producers.color-line.red-block
                .one-new-producers
                  a.img-bg href="market/{{markets_top.id}}" style="background-image: url('{{markets_top.image_url}}')"
                .description
                  .description-txt
                    .maker
                      | {{markets_top.country}}
                    .product-name
                      | {{markets_top.title}}
            .sliderBXcell
            .sliderBXcell
            .sliderBXcell



    .medium-9.columns
      .salse-all
        .sales-leaders ng-repeat="markets_all in all_markets"
          .medium-4.columns
            .border-producers.color-line.red-block
              .one-new-producers
                a.img-bg href="market/{{markets_all.id}}" style="background-image: url('{{markets_all.image_url}}')"
              .description
                .description-txt
                  .maker
                    | {{markets_all.country}}
                  .product-name
                    | {{markets_all.title}}
