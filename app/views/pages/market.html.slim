.oneproducter
  .row
    .medium-8.columns
      .row
        .medium-3.columns
          .wrapper
            .media-ob
              .compani-logo
                .img-bg style="background-image: url(#{@market.logo_image.url})"
                .tex-box более 5000 товаров
        .medium-6.columns
          .text-oneproducter
            .title
              =@market.title
              .title-smolle
                =@market.main_menu&.title
            .rules
              .country
                = t("unit_of_goods.Country")
                .text
                  =@market.country&.title
              .address
                = t("unit_of_goods.Address")
                .text
                  =@market.address
              .site
                = t("unit_of_goods.Site")
                a.text href="#{@market.web_site_url}"
                  =@market.web_site_url
            .contacts
              .text-face.color-line.gray-block
                = t("post_product.company_name")
              .forms-abaut
                .lup
                  .icon = inline_svg "photo/main/svg/man.svg"
                  .text.name
                    =@market.full_name
                .lup
                  .icon  = inline_svg "photo/main/svg/mail.svg"
                  .text
                    a href="mailto: #{@market.first_email}" =@market.first_email
                -if @market.second_email
                  .lup
                    .icon  = inline_svg "photo/main/svg/mail.svg"
                    .text
                      a href="mailto: #{@market.second_email}" =@market.second_email
                -if @market.third_email
                  .lup
                    .icon  = inline_svg "photo/main/svg/mail.svg"
                    .text
                      a href="mailto: #{@market.third_email}" =@market.third_email
                .lup
                  .icon = inline_svg "photo/main/svg/phone.svg"
                  .text
                    a href="tel:#{@market.first_phone_number}" =@market.first_phone_number
                -if @market.second_phone_number
                 .lup
                  .icon = inline_svg "photo/main/svg/phone.svg"
                  .text
                    a href="tel:#{@market.second_phone_number}" =@market.second_phone_number
                -if @market.third_phone_number
                 .lup
                  .icon = inline_svg "photo/main/svg/phone.svg"
                  .text
                    a href="tel:#{@market.third_phone_number}" =@market.third_phone_number
      .medium.columns
        .about-us
          .title.color-line.gray-block
            .text-title
              = t("unit_of_goods.about_company")
          .about-us-text
            =raw @market.description
            .title.marka.color-line.gray-block
              .text-title торговая марка
            .about-us-text
              =raw @market.our_brands


          .title.color-line.gray-block
            .text-title
              = t("unit_of_goods.our_advantages")
          .about-us-text
            = raw @market.our_benefits
        .bg-slider
          .wrapper
            .targer
              =render "onegoodsslider", product: @market
    .medium-4.columns
      .sertuficat
        .title
          = t("post_product.certificate")
        .selector
          = render "oneproducterslider", product: @market
      .batton-doun
        a.btn-big href="#{@market.price_list_file}"
          .text
            = t("post_product.price_list")
          .icon = inline_svg "photo/main/svg/arrowdown.svg"
        a.btn-big href="#{@market.sertificates_file}"
          .text
            = t("post_product.certificate")
          .icon = inline_svg "photo/main/svg/arrowdown.svg"
