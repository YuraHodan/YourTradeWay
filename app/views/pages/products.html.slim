                    | {{manufacturesl_all.country}}
                  .product-name
                    | {{manufacturesl_all.title}}



    / .medium-9.columns
    /   .salse-all
    /      -@manufactures.each do |manufacture|
    /       .medium-4.columns
    /           .border-producers.color-line.blue-block
    /             .one-new-producers
    /               a.img-bg href=maker_path(manufacture.id) style="background-image: url(#{manufacture&.logo_image&.url})"
    /             .description
    /               .description-txt
    /                 .maker
    /                   =manufacture.country&.title
    /                 .product-name
    /                   =manufacture.title
    .medium-9.columns
      = render "recomendationSalse"
      / .salse-all
      /   .medium-4.columns  ng-repeat="product in records | limitTo : 6"
      /     .border-producers.color-line.blue-block
