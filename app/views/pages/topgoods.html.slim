.tovarsp ng-controller="goodsControler as stor"
  .row
    .medium-3.columns
      .selectorr
        .select
          .accordion-button
            p  countries
            .svg-slid = inline_svg "svg/ic_keyboard_arrow_up_black_24px.svg"
          .accordion-inner.show

            .selector
              / input#post-2.read-more-state type="checkbox"
              form name="userForm" ng-submit="submitForm()"
                ul.read-more-wrap ng-repeat="countries in all_countries"
                  li
                    label.container
                      | {{countries.title}}
                      input type="checkbox" ng-model="countries.selected" ng-change='trackOrder(countries)'  value="{{countries.id}}" ng-click="submitForm().submit()"  
                      span.checkmark

      .dubl-select
        .accordion-button
          p afdsfdsf2
          .svg-slid = inline_svg "svg/ic_keyboard_arrow_up_black_24px.svg"
        .accordion-inner.show

          .selector
            form name="userForm2" ng-submit="submitForm2()"
              ul.read-more-wrap ng-repeat="products in question"
                li
                  input type="checkbox" ng-model="products.selected" ng-change='trackOrder2(products)'  value="{{products.id}}" ng-click="submitForm2().submit()"  {{products.name}}
                  nav
                    ul.drop-down
                      li
                        a.nav-button href="#" ng-click="voteUp" = inline_svg "svg/ic_keyboard_arrow_down_black_24px.svg"
                      .down
                        form name="userForm3" ng-submit="submitForm3()"
                          ul ng-repeat="second_menu in products.second_menu"
                            li
                              input type="checkbox" ng-model="second_menu.selected" ng-change='trackOrder3(second_menu)'  value="{{second_menu.id}}" ng-click="submitForm3().submit()"  {{second_menu.title}}

          .remove-all
            .x-component = inline_svg "photo/main/svg/filter_clear.svg"
            .ramove-text очистить все


      // smole select ///////////////////
      .wrapper-filter
        .openfilters
          p фильтра
        .filter-container
          / = render "selectsmole"
          .select
            .accordion-button
              p  countries
              .svg-slid = inline_svg "svg/ic_keyboard_arrow_up_black_24px.svg"
            .accordion-inner.show

              .selector
                / input#post-2.read-more-state type="checkbox"
                form name="userForm" ng-submit="submitForm()"
                  ul.read-more-wrap ng-repeat="countries in all_countries"
                    li
                      input type="checkbox" ng-model="countries.selected" ng-change='trackOrder(countries)'  value="{{countries.id}}" ng-click="submitForm().submit()"  {{countries.title}}
          .dubl-select
            .accordion-button.opened
              p afdsfdsf
              .svg-slid = inline_svg "svg/ic_keyboard_arrow_up_black_24px.svg"
            .accordion-inner.show

              .selector
                form name="userForm2" ng-submit="submitForm2()"
                  ul.read-more-wrap ng-repeat="products in question"
                    li
                      input type="checkbox" ng-model="products.selected" ng-change='trackOrder2(products)'  value="{{products.id}}" ng-click="submitForm2().submit()"  {{products.name}}
                      nav
                        ul.drop-down
                          li
                            a.nav-button href="#" ng-click="voteUp" = inline_svg "svg/ic_keyboard_arrow_down_black_24px.svg"
                          .down
                            form name="userForm3" ng-submit="submitForm3()"
                              ul ng-repeat="second_menu in products.second_menu"
                                li
                                  input type="checkbox" ng-model="second_menu.selected" ng-change='trackOrder3(second_menu)'  value="{{second_menu.id}}" ng-click="submitForm3().submit()"  {{second_menu.title}}
              .remove-all
                .x-component = inline_svg "photo/main/svg/filter_clear.svg"
                .ramove-text очистить все
      /// smole select
      .selector
        = render "advertisingSlider"
    .medium-9.columns
      .vibe-text.color-line.gray-block
        .title топ товари
      .vibe-goods
        .medium-4.columns ng-repeat="products_top in top_products"
          .border-producers.color-line.yellow-block
            .one-new-product
              a.img-bg href="article/{{products_top.id}}" style="background-image: url('{{products_top.image_url}}')"
            .description
              .description-txt
                .maker
                  | {{products_top.title}}
                .product-name
                  | {{products_top.manufacture_title}}
                .price.color-line.gray-block
                  .oriented-price
                    | орієнтовочная цена:
                  .mony
                    | {{products_top.price}}$
