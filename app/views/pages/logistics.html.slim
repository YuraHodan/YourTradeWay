.marcet ng-controller="logisticsController"
  .row
    .medium-3.columns
      .selector.bage
        / = render "selector"
        .select
          .accordion-button
            p  countries
            .svg-slid = inline_svg "svg/ic_keyboard_arrow_up_black_24px.svg"
          .accordion-inner.show

            .selector
              input#post-2.read-more-state type="checkbox" /
              ul.read-more-wrap ng-repeat="countries in all_countries"
                li
                  .one-checkbox
                    .checkbox
                      input#checkbox-saliss1 type="checkbox"
                      label.switcher-control for="checkbox-saliss1"
                        button type="submit"
                          span
                            / a href="logistics?country_ids={{countries.id}}"
                            input#submit type="submit" ng-model="text" value="{{countries.id}}"
                              | {{countries.title}}
                            .pre
                              | list={{list}}
              form ng-submit="submit()"
                | Enter text and hit enter:
                input name="text" ng-model="text" type="text"
                input#submit type="submit" value="Submit"
                .pre
                  | list={{list}}
              label.read-more-trigger for="post-2"
      .dubl-select
        .accordion-button.opened
          p логистика
          .svg-slid = inline_svg "svg/ic_keyboard_arrow_down_black_24px.svg"
        .accordion-inner.show

          .selector
            ul.read-more-wrap ng-repeat="logistic in questionlogistic"
              li
                .one-checkbox
                  .checkbox
                    input#checkbox-salis1 type="checkbox"
                    label.switcher-control for="checkbox-salis1"
                    span
                      a href="logistics?id={{logistic.id}}"
                        | {{logistic.name}}
          .remove-all
            .x-component = inline_svg "photo/main/svg/filter_clear.svg"
            .ramove-text
              a href=logistics_path очистить все
