.recomendation-tovars ng-if="recomend_products != ''"
  .recomendation-text.color-line.gray-block
    .title
      = t("menus.recommended")
  .recommendation-goods ng-repeat="products_recomend in recomend_products | limitTo : 3"
    .medium-4.columns
      .border-producers.color-line.yellow-block
        .one-new-product
          a.img-bg href="article/{{products_recomend.id}}" style="background-image: url('{{products_recomend.image_url}}')"
        .description
          .description-txt
            .maker
              | {{products_recomend.title}}
            .product-name
              | {{products_recomend.manufacture_title}}
            .price.color-line.gray-block
              .oriented-price
                = t("unit_of_goods.tentative_price")
              .mony
                | {{products_recomend.price}}$
